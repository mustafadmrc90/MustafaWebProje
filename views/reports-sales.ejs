<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bus Product</title>
    <link rel="icon" href="/public/favicon.png" />
    <link rel="stylesheet" href="/public/styles.css" />
  </head>
  <body class="dashboard layout">
    <%- include("partials/sidebar", { active }) %>

    <section class="content">
      <header class="page-header">
        <div class="page-title">
          <h1>Satışlar</h1>
        </div>
        <div class="page-actions">
          <div class="user-pill"><%= user.displayName %></div>
        </div>
      </header>

      <section class="table-card panel-card sales-filter-section">
        <form class="sales-filter-form" method="get" action="/reports/sales">
          <input type="hidden" name="run" value="1" />
          <div class="sales-filter-grid">
            <label class="sales-filter-field sales-filter-field-start">
              <span>Başlangıç Tarihi</span>
              <input type="date" name="startDate" value="<%= filters.startDate %>" />
            </label>

            <label class="sales-filter-field sales-filter-field-company">
              <span>Firma</span>
              <select name="company">
                <% companies.forEach((item) => { %>
                  <option
                    value="<%= item.value %>"
                    <%= item.disabled ? "disabled" : "" %>
                    <%= filters.company === item.value ? "selected" : "" %>
                  >
                    <%= item.label %>
                  </option>
                <% }) %>
              </select>
            </label>

            <label class="sales-filter-field sales-filter-field-end">
              <span>Bitiş Tarihi</span>
              <input type="date" name="endDate" value="<%= filters.endDate %>" />
            </label>
          </div>
          <div class="sales-filter-actions">
            <button type="submit">Filtrele</button>
          </div>
          <div class="sales-loading-message" hidden>Rapor hazırlanıyor, lütfen bekleyin...</div>
        </form>
      </section>

      <section class="table-card panel-card">
        <h2>Satış Raporları</h2>
        <div class="sales-tabs" role="tablist" aria-label="Satış raporu görünümleri">
          <button type="button" class="sales-tab active" data-sales-tab="list">Liste</button>
          <button type="button" class="sales-tab" data-sales-tab="daily">Günlük</button>
          <button type="button" class="sales-tab" data-sales-tab="monthly">Aylık</button>
        </div>

        <% if (report.error) { %>
          <div class="alert inline-alert"><%= report.error %></div>
        <% } %>

        <div class="sales-tab-panel active" data-sales-panel="list">
          <% if (!report.requested) { %>
            <p class="muted">Raporu görmek için tarih ve firma seçip Filtrele'ye basın.</p>
          <% } %>

          <% if (report.requested && report.listRows.length === 0 && !report.error) { %>
            <p class="muted">Liste görünümünde gösterilecek veri bulunamadı.</p>
          <% } %>

          <% if (report.listRows.length > 0) { %>
            <div class="table-scroll">
              <table class="sales-list-table">
                <thead>
                  <tr>
                    <th>Firma Adı</th>
                    <th>WebSite</th>
                    <th>oBilet</th>
                  </tr>
                </thead>
                <tbody>
                  <% report.listRows.forEach((row) => { %>
                    <tr>
                      <td><%= row.code %></td>
                      <td><%= row.websiteSaleAmount %></td>
                      <td><%= row.obiletSaleAmount %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>

        <div class="sales-tab-panel" data-sales-panel="daily">
          <% if (!report.requested) { %>
            <p class="muted">Günlük görünüm için filtreleyip raporu çalıştırın.</p>
          <% } %>

          <% if (report.requested && report.dailySeries.length === 0 && !report.error) { %>
            <p class="muted">Günlük görünümde gösterilecek sonuç bulunamadı.</p>
          <% } %>

          <% if (report.dailySeries.length > 0) { %>
            <div class="sales-chart">
              <% report.dailySeries.forEach((row) => { %>
                <article class="sales-chart-row">
                  <div class="sales-chart-label"><%= row.label %></div>
                  <div class="sales-chart-bars">
                    <div class="sales-bar-line">
                      <span class="sales-bar-name">WebSite</span>
                      <div class="sales-bar-track">
                        <div class="sales-bar-fill website" style="width: <%= row.websitePct %>%"></div>
                      </div>
                      <span class="sales-bar-number"><%= row.websiteText %></span>
                    </div>
                    <div class="sales-bar-line">
                      <span class="sales-bar-name">oBilet</span>
                      <div class="sales-bar-track">
                        <div class="sales-bar-fill obilet" style="width: <%= row.obiletPct %>%"></div>
                      </div>
                      <span class="sales-bar-number"><%= row.obiletText %></span>
                    </div>
                  </div>
                </article>
              <% }) %>
            </div>
          <% } %>
        </div>

        <div class="sales-tab-panel" data-sales-panel="monthly">
          <% if (!report.requested) { %>
            <p class="muted">Aylık görünüm için filtreleyip raporu çalıştırın.</p>
          <% } %>

          <% if (report.requested && report.monthlySeries.length === 0 && !report.error) { %>
            <p class="muted">Aylık görünümde gösterilecek sonuç bulunamadı.</p>
          <% } %>

          <% if (report.monthlySeries.length > 0) { %>
            <div class="sales-chart">
              <% report.monthlySeries.forEach((row) => { %>
                <article class="sales-chart-row">
                  <div class="sales-chart-label"><%= row.label %></div>
                  <div class="sales-chart-bars">
                    <div class="sales-bar-line">
                      <span class="sales-bar-name">WebSite</span>
                      <div class="sales-bar-track">
                        <div class="sales-bar-fill website" style="width: <%= row.websitePct %>%"></div>
                      </div>
                      <span class="sales-bar-number"><%= row.websiteText %></span>
                    </div>
                    <div class="sales-bar-line">
                      <span class="sales-bar-name">oBilet</span>
                      <div class="sales-bar-track">
                        <div class="sales-bar-fill obilet" style="width: <%= row.obiletPct %>%"></div>
                      </div>
                      <span class="sales-bar-number"><%= row.obiletText %></span>
                    </div>
                  </div>
                </article>
              <% }) %>
            </div>
          <% } %>
        </div>
      </section>
    </section>
    <script src="/public/app.js" defer></script>
  </body>
</html>
