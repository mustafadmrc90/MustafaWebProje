<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bus Product</title>
    <link rel="icon" href="/public/favicon.png" />
    <link rel="stylesheet" href="/public/styles.css" />
  </head>
  <body class="dashboard layout">
    <%- include("partials/sidebar", { active }) %>

    <section class="content">
      <header class="page-header">
        <div class="page-title">
          <h1>Satışlar</h1>
        </div>
        <div class="page-actions">
          <div class="user-pill"><%= user.displayName %></div>
        </div>
      </header>

      <section class="table-card panel-card sales-filter-section">
        <form class="sales-filter-form" method="get" action="/reports/sales">
          <input type="hidden" name="run" value="1" />
          <div class="sales-filter-grid">
            <label class="sales-filter-field sales-filter-field-start">
              <span>Başlangıç Tarihi</span>
              <input type="date" name="startDate" value="<%= filters.startDate %>" />
            </label>

            <label class="sales-filter-field sales-filter-field-company">
              <span>Firma</span>
              <select name="company">
                <% companies.forEach((item) => { %>
                  <option
                    value="<%= item.value %>"
                    <%= item.disabled ? "disabled" : "" %>
                    <%= filters.company === item.value ? "selected" : "" %>
                  >
                    <%= item.label %>
                  </option>
                <% }) %>
              </select>
            </label>

            <label class="sales-filter-field sales-filter-field-end">
              <span>Bitiş Tarihi</span>
              <input type="date" name="endDate" value="<%= filters.endDate %>" />
            </label>
          </div>
          <div class="sales-filter-actions">
            <button type="submit">Filtrele</button>
          </div>
        </form>
      </section>

      <section class="table-card panel-card">
        <h2>Satış Raporları</h2>
        <% if (!report.requested) { %>
          <p class="muted">Raporu görmek için tarih ve firma seçip Filtrele'ye basın.</p>
        <% } %>

        <% if (report.error) { %>
          <div class="alert inline-alert"><%= report.error %></div>
        <% } %>

        <% if (report.requested && report.items.length === 0 && !report.error) { %>
          <p class="muted">Seçilen filtre için sonuç bulunamadı.</p>
        <% } %>

        <% if (report.items.length > 0) { %>
          <div class="sales-report-list">
            <% report.items.forEach((item) => { %>
              <article class="sales-report-item">
                <div class="sales-report-head">
                  <strong><%= item.cluster %></strong>
                  <span class="pill <%= item.ok ? 'success' : 'muted' %>">
                    <%= item.ok ? `OK (${item.status})` : `Hata (${item.status || 0})` %>
                  </span>
                </div>
                <% if (item.reportUrl) { %>
                  <div class="sales-report-url"><%= item.reportUrl %></div>
                <% } %>
                <% if (item.error) { %>
                  <div class="alert inline-alert"><%= item.error %></div>
                <% } %>
                <pre class="code-output sales-report-output"><%= item.payloadText %></pre>
              </article>
            <% }) %>
          </div>
        <% } %>
      </section>
    </section>
    <script src="/public/app.js" defer></script>
  </body>
</html>
