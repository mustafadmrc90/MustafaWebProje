<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bus Product</title>
    <link rel="icon" href="/public/favicon.png" />
    <link rel="stylesheet" href="/public/styles.css" />
  </head>
  <body class="dashboard layout">
    <%- include("partials/sidebar", { active }) %>

    <section class="content">
      <header class="page-header">
        <div class="page-title">
          <h1>Yetkiler</h1>
          <p>@<%= targetUser.username %> — <%= targetUser.display_name %></p>
        </div>
        <div class="page-actions">
          <a class="button-link ghost" href="/users">Kullanıcılar</a>
        </div>
      </header>

      <% if (ok) { %>
        <div class="alert success inline-alert">Yetkiler güncellendi.</div>
      <% } %>

      <section class="table-card panel-card">
        <div class="table-head">
          <h2>Ekran Yetkileri</h2>
        </div>
        <div class="table">
          <div class="row head">
            <span>Ekran</span>
            <span>Görüntüleme</span>
            <span>İşlem</span>
          </div>
          <% screens.forEach((s) => { %>
            <form class="row" method="post" action="/permissions/<%= targetUser.id %>">
              <input type="hidden" name="screenId" value="<%= s.id %>" />
              <span><%= s.name %> <small class="muted">(<%= s.key %>)</small></span>
              <label class="switch">
                <input type="checkbox" name="canView" <%= s.can_view ? "checked" : "" %> />
                <span class="slider"></span>
              </label>
              <button type="submit" class="ghost">Kaydet</button>
            </form>
          <% }) %>
        </div>
      </section>
    </section>
    <script src="/public/app.js" defer></script>
  </body>
</html>
