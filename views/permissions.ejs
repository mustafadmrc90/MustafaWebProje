<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bus Product</title>
    <link rel="icon" href="/public/favicon.png" />
    <link rel="stylesheet" href="/public/styles.css" />
  </head>
  <body class="dashboard layout">
    <%- include("partials/sidebar", { active }) %>

    <section class="content">
      <header class="page-header">
        <div class="page-title">
          <h1>
            <span class="page-title-icon" aria-hidden="true">
              <svg viewBox="0 0 24 24">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                <path d="M9 12l2 2 4-4"></path>
              </svg>
            </span>
            <span>Yetkiler</span>
          </h1>
          <p>@<%= targetUser.username %> — <%= targetUser.display_name %></p>
        </div>
        <div class="page-actions">
          <a class="button-link ghost" href="/users">Kullanıcılar</a>
        </div>
      </header>

      <% if (ok) { %>
        <div class="alert success inline-alert">Yetkiler güncellendi.</div>
      <% } %>

      <section class="table-card panel-card">
        <div class="table-head">
          <h2>Menü Yetkileri</h2>
          <small class="muted">Ana menü değişirse alt menüler toplu değişir, tek kaydet ile uygulanır.</small>
        </div>
        <% if (isTargetAdmin) { %>
          <div class="alert inline-alert">`admin` kullanıcısı her zaman tüm menülere erişir.</div>
        <% } %>
        <form method="post" action="/permissions/<%= targetUser.id %>">
          <input type="hidden" name="sectionTouchedJson" value="[]" />
          <div class="table">
            <div class="row head permissions-bulk-row">
              <span>Menü</span>
              <span>Üst Menü</span>
              <span>Yol</span>
              <span>Görüntüleme</span>
            </div>
            <% menuSections.forEach((section) => { %>
              <div class="row permissions-bulk-row permissions-section-row">
                <span class="permission-name">
                  <strong><%= section.label %></strong>
                  <small class="muted">(<%= section.key %>)</small>
                </span>
                <span class="permission-parent muted">Ana Menü</span>
                <span class="permission-route muted">Alt: <%= section.items.filter((item) => item.canView).length %>/<%= section.items.length %></span>
                <span>
                  <label class="switch">
                    <input
                      type="checkbox"
                      name="sectionKeys"
                      value="<%= section.key %>"
                      data-section-toggle="<%= section.key %>"
                      <%= section.canView ? "checked" : "" %>
                      <%= isTargetAdmin ? "disabled" : "" %>
                    />
                    <span class="slider"></span>
                  </label>
                </span>
              </div>

              <% section.items.forEach((item) => { %>
                <div class="row permissions-bulk-row permission-child permission-check-row" data-parent-section="<%= section.key %>">
                  <span class="permission-name">
                    <span><%= item.label %></span>
                    <small class="muted">(<%= item.key %>)</small>
                  </span>
                  <span class="permission-parent"><%= section.label %></span>
                  <span class="permission-route"><%= item.route || "-" %></span>
                  <span>
                    <label class="switch">
                      <input
                        type="checkbox"
                        name="menuKeys"
                        value="<%= item.key %>"
                        data-item-checkbox="1"
                        data-parent-section="<%= section.key %>"
                        <%= item.canView ? "checked" : "" %>
                        <%= isTargetAdmin ? "disabled" : "" %>
                      />
                      <span class="slider"></span>
                    </label>
                  </span>
                </div>
              <% }) %>
            <% }) %>
          </div>
          <% if (!isTargetAdmin) { %>
            <div class="table-actions">
              <button type="submit">Kaydet</button>
            </div>
          <% } %>
        </form>
      </section>
    </section>
    <script src="/public/app.js" defer></script>
  </body>
</html>
